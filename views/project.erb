
<h3>Project title: <%= @project.title %> </h3>

<h4>Project Volunteers</h4>
  <% if @project.volunteers %>
    <ul>
      <% @project.volunteers.each do |volunteer| %>
        <li><a <%= volunteer.id %>><%= volunteer.name %> </a></li>
      <% end %>
    </ul>
  <% else %>
      <p> There are no volunteers assigned to this project</p>
  <% end %>

<h4>Add a volunteer</h4>

<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <div class="form-group"> 
    <label for="name">Volunteer name</label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
    <button type="submit" class="btn btn-success">Add volunteer</button>
</form>


<p><a href="/projects/<%= @project.id %>/edit">Edit Project</a></p>
<p><a href="/projects">Return to project list</a></p>